<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical" 
    android:id="@+id/id_action_bar">

    <FrameLayout
        android:id="@+id/iv_parent_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minWidth="48dp"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/iv_parent_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:minWidth="48dp"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_action_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/iv_parent_back"
        android:layout_toLeftOf="@id/iv_parent_menu"
        android:layout_toRightOf="@id/iv_parent_back"
        android:layout_toStartOf="@id/iv_parent_menu"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>